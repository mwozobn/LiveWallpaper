<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0.5dp" />

            <gradient
                android:angle="270"
                android:centerColor="#40D5D3D3"
                android:centerY="0.75"
                android:endColor="#40D5D3D3"
                android:startColor="#40D5D3D3" />
        </shape>

    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0.5dp" />
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#FF5454"
                    android:startColor="#EF8CE2" />
            </shape>
        </clip>
    </item>
</layer-list>