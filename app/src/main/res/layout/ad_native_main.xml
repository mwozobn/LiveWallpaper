<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_ad"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_ad_up"
            />
        <TextView
            android:id="@+id/tv_ad_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="Cut the rope: Magic"
            app:layout_constraintTop_toTopOf="@id/iv_ad"
            app:layout_constraintStart_toEndOf="@id/iv_ad" />

        <TextView
            android:id="@+id/tv_ad_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#737373"
            android:text="Press the spacebar and want toâ€¦"
            app:layout_constraintBottom_toBottomOf="@id/iv_ad"
            app:layout_constraintStart_toEndOf="@id/iv_ad" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent" >
        <Button
            android:id="@+id/btn_install"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="install"
            android:background="#039AFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>